<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # ----------------------------------------------------------------------
    # FORCE HTTPS + REMOVE WWW (SEO CRITICAL)
    # ----------------------------------------------------------------------

    # Redirect HTTP → HTTPS
    RewriteCond %{HTTPS} !=on
    RewriteRule ^ https://digitalpackt.de%{REQUEST_URI} [L,R=301]

    # Redirect www → non-www
    RewriteCond %{HTTP_HOST} ^www\.digitalpackt\.de$ [NC]
    RewriteRule ^ https://digitalpackt.de%{REQUEST_URI} [L,R=301]

    # ----------------------------------------------------------------------
    # SECURITY HEADERS (Lighthouse + Jetstream SAFE)
    # ----------------------------------------------------------------------
    <IfModule mod_headers.c>

        # HSTS (HTTPS enforcement)
        Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

        # Clickjacking protection
        Header always set X-Frame-Options "SAMEORIGIN"

        # ✅ CORRECT CSP (Alpine + Livewire + Jetstream)
        Header always set Content-Security-Policy "
            default-src 'self';
            script-src 'self' 'unsafe-inline' 'unsafe-eval';
            style-src 'self' 'unsafe-inline' https://fonts.bunny.net;
            font-src 'self' https://fonts.bunny.net data:;
            img-src 'self' data: https://ui-avatars.com;
            connect-src 'self';
            frame-src 'self';
            object-src 'none';
        "

        # COOP
        Header always set Cross-Origin-Opener-Policy "same-origin"

        # Prevent MIME sniffing
        Header always set X-Content-Type-Options "nosniff"

        # Privacy-safe referrer
        Header always set Referrer-Policy "strict-origin-when-cross-origin"

    </IfModule>

    # ----------------------------------------------------------------------
    # LARAVEL ROUTING (STANDARD)
    # ----------------------------------------------------------------------

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Handle X-XSRF-Token Header
    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:X-XSRF-Token}]

    # Remove trailing slash (SEO)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Front Controller
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]

</IfModule>
